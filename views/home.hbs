<h2 style="color:white; text-align:center; margin-top: 80px;">MUSICA DISPONIBLE</h2>

<div style="max-width: 600px; margin: 20px auto 30px auto; padding: 0 15px;">
    <div class="input-group input-group-lg">
        <input type="text" id="buscadorInput" class="form-control"
               placeholder="Busca artistas o canciones..."
               style="background: rgba(0,0,0,0.7); color: white; border: 2px solid #4ecdc4; border-radius: 10px 0 0 10px;">
        <button class="btn btn-primary" id="btnBuscar" style="border-radius: 0 10px 10px 0; padding: 0 20px;">
            üîç Buscar
        </button>
    </div>
    <div id="resultadosBusqueda" style="margin-top: 25px; display: none;"></div>
</div>

<div class="d-flex flex-wrap justify-content-center gap-4 mt-4" id="contenedor-canciones">
    {{#each canciones}}
        <div class="card shadow-lg song-card" style="width:180px; background: rgba(0,0,0,0.7); color:white; border:1px solid #fff; border-radius:10px; position:relative;">
            <img src="{{this.portada}}" class="card-img-top"
                 title="√Ålbum: {{this.album}}" style="border-radius:10px; cursor:pointer;">
            <div class="card-body p-2 text-center">
                <h6 class="card-title mb-1" style="font-size:0.9rem;">{{this.nombre}}</h6>
                <p class="card-text mb-2" style="font-size:0.8rem;">{{this.artista}}</p>
                <audio controls style="width:100%;">
                    <source src="{{this.audio}}" type="audio/mpeg">
                </audio>
                <button class="btn btn-sm btn-light mt-2 w-100 favorito-btn"
                        data-nombre="{{this.nombre}}"
                        data-artista="{{this.artista}}"
                        data-audio="{{this.audio}}"
                        data-portada="{{this.portada}}"
                        data-album="{{this.album}}">
                    ‚ù§Ô∏è Favoritos
                </button>
            </div>
        </div>
    {{/each}}
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const menuItems = document.querySelectorAll('.menu-item');

        menuItems.forEach(item => {
            item.addEventListener('mouseenter', function() {
                this.style.backgroundColor = 'rgba(78, 205, 196, 0.2)';
                this.style.transform = 'translateY(-3px) scale(1.05)';
                this.style.boxShadow = '0 8px 20px rgba(78, 205, 196, 0.3)';
                this.style.color = '#4ecdc4';
                this.style.border = '1px solid rgba(78, 205, 196, 0.3)';
            });

            item.addEventListener('mouseleave', function() {
                this.style.backgroundColor = '';
                this.style.transform = 'translateY(0) scale(1)';
                this.style.boxShadow = 'none';
                this.style.color = 'white';
                this.style.border = '1px solid transparent';
            });

            item.addEventListener('mousedown', function() {
                this.style.transform = 'translateY(0) scale(0.95)';
                this.style.backgroundColor = 'rgba(78, 205, 196, 0.4)';
            });

            item.addEventListener('mouseup', function() {
                this.style.transform = 'translateY(-3px) scale(1.05)';
                this.style.backgroundColor = 'rgba(78, 205, 196, 0.2)';
            });
        });

        // Efecto para el contenedor del men√∫
        const menuContainer = document.querySelector('.menu-centrado');
        menuContainer.addEventListener('mouseenter', function() {
            this.style.boxShadow = '0 10px 30px rgba(78, 205, 196, 0.2)';
            this.style.borderColor = '#4ecdc4';
        });

        menuContainer.addEventListener('mouseleave', function() {
            this.style.boxShadow = '0 5px 25px rgba(0, 0, 0, 0.6)';
            this.style.borderColor = '#4ecdc4';
        });

        const buscadorInput = document.getElementById('buscadorInput');
        const btnBuscar = document.getElementById('btnBuscar');
        const resultadosBusqueda = document.getElementById('resultadosBusqueda');
        let tooltipActual = null;

        async function buscarCanciones(termino) {
            if (!termino.trim()) {
                resultadosBusqueda.innerHTML = '<p style="color: #ff6b6b; text-align: center;">Escribe algo para buscar</p>';
                resultadosBusqueda.style.display = 'block';
                return;
            }

            try {
                resultadosBusqueda.innerHTML = `
                    <div style="text-align: center; color: #ccc; padding: 30px;">
                        <div class="spinner-border text-light" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">Buscando...</span>
                        </div>
                        <p class="mt-3" style="font-size: 1.1rem;">Buscando "<strong>${termino}</strong>"...</p>
                    </div>
                `;
                resultadosBusqueda.style.display = 'block';

                const url = `https://itunes.apple.com/search?term=${encodeURIComponent(termino)}&entity=song&limit=20`;
                const response = await fetch(url);
                const data = await response.json();

                if (!data.results || data.results.length === 0) {
                    resultadosBusqueda.innerHTML = `
                        <div style="text-align: center; color: #ff6b6b; padding: 30px;">
                            <h5>üéµ No se encontraron resultados</h5>
                            <p>Intenta con otro t√©rmino de b√∫squeda</p>
                        </div>
                    `;
                    return;
                }

                let html = `
    <div class="mb-4" style="border-bottom: 2px solid #4ecdc4; padding-bottom: 15px;">
        <h4 style="color: white; margin: 0; text-align: center;">
            üîç Resultados para "<span style="color: #4ecdc4">${termino}</span>"
        </h4>
        <p style="color: #ccc; text-align: center; margin: 5px 0 0 0;">
            ${data.results.length} canciones encontradas
        </p>
    </div>

    <div class="container-fluid px-0">
        <div class="row row-cols-1 row-cols-sm-2 g-4 justify-content-center">
`;

                data.results.forEach((track, index) => {
                    if (index >= 20) return;

                    const portada = track.artworkUrl100
                            ? track.artworkUrl100.replace("100x100bb.jpg", "300x300bb.jpg")
                            : 'https://via.placeholder.com/300x300/333/ccc?text=No+Image';

                    html += `
        <div class="col">
            <div class="card h-100 resultado-cancion"
                 style="background: rgba(0,0,0,0.85); color:white; border:1px solid transparent; border-radius:12px; cursor: pointer; transition: all 0.3s;">
                <img src="${portada}"
                     class="card-img-top portada-resultado"
                     style="border-radius:10px 10px 0 0; height: 200px; object-fit: cover;"
                     data-album="${track.collectionName || 'Sin √°lbum'}"
                     data-artista="${track.artistName || 'Artista desconocido'}"
                     data-index="${index}"
                     title="Click para ver √°lbum">

                <div class="card-body p-3 d-flex flex-column">
                    <h6 class="card-title mb-2" style="font-size:1rem; min-height: 50px; line-height: 1.2;">
                        ${track.trackName || 'Sin t√≠tulo'}
                    </h6>

                    <p class="card-text mb-3" style="font-size:0.9rem; color: #ccc; flex-grow: 1;">
                        ${track.artistName || 'Artista desconocido'}
                    </p>

                    ${track.previewUrl ? `
                    <audio controls class="mb-3" style="width:100%; height: 40px;">
                        <source src="${track.previewUrl}" type="audio/mpeg">
                    </audio>
                    ` : '<p class="text-muted mb-3" style="font-size:0.85rem;">üéµ Sin preview</p>'}

                    <button class="btn btn-sm btn-success w-100 agregar-busqueda-btn mt-auto"
                            data-nombre="${track.trackName || ''}"
                            data-artista="${track.artistName || ''}"
                            data-audio="${track.previewUrl || ''}"
                            data-portada="${portada}"
                            data-album="${track.collectionName || ''}"
                            style="transition: all 0.2s; background: #28a745; border: none; padding: 8px 12px; font-size: 0.9rem;">
                        ‚ù§Ô∏è Agregar a Favoritos
                    </button>
                </div>
            </div>
        </div>
    `;
                });

                html += `
        </div>
    </div>

    <div style="text-align: center; margin-top: 20px; padding-top: 15px; border-top: 1px solid #333;">
        <p style="color: #999; font-size: 0.9rem;">
            üé∂ Resultados de iTunes Store
        </p>
    </div>
`;

                resultadosBusqueda.innerHTML = html;
                agregarEventosResultados();

            } catch (error) {
                console.error('Error en b√∫squeda:', error);
                resultadosBusqueda.innerHTML = `
                    <div style="text-align: center; color: #ff6b6b; padding: 30px;">
                        <h5>Error de conexi√≥n</h5>
                        <p>Intenta de nuevo en un momento</p>
                    </div>
                `;
            }
        }

        function mostrarTooltipAlbum(elemento, album, artista, x, y) {
            if (tooltipActual) {
                tooltipActual.remove();
            }

            tooltipActual = document.createElement('div');
            tooltipActual.className = 'tooltip-album-custom';
            tooltipActual.innerHTML = `
                <div style="position: fixed; background: rgba(0,0,0,0.95); color: white;
                           padding: 8px 12px; border-radius: 8px; border: 1px solid #4ecdc4;
                           z-index: 9999; max-width: 250px; font-size: 0.8rem;
                           backdrop-filter: blur(5px); box-shadow: 0 3px 15px rgba(0,0,0,0.7);
                           pointer-events: none; transform: translate(-50%, -100%);">
                    <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 5px;">
                        <div style="width: 30px; height: 30px; background: #4ecdc4; border-radius: 6px;
                                   display: flex; align-items: center; justify-content: center; font-size: 1rem;">
                            üíø
                        </div>
                        <div>
                            <strong style="color: #4ecdc4; display: block; font-size: 0.85rem;">${album}</strong>
                            <small style="color: #ccc; font-size: 0.75rem;">${artista}</small>
                        </div>
                    </div>
                </div>
            `;

            const tooltipContent = tooltipActual.firstChild;
            tooltipContent.style.top = (y - 10) + 'px';
            tooltipContent.style.left = x + 'px';

            document.body.appendChild(tooltipContent);
        }

        function agregarEventosResultados() {
            const tarjetasResultados = document.querySelectorAll('.resultado-cancion');
            const portadasResultados = document.querySelectorAll('.portada-resultado');
            const botonesResultados = document.querySelectorAll('.agregar-busqueda-btn');

            portadasResultados.forEach(portada => {
                let timeoutId;

                portada.addEventListener('mouseenter', function(e) {
                    const album = this.dataset.album;
                    const artista = this.dataset.artista;

                    if (!album || album === 'Sin √°lbum') return;

                    timeoutId = setTimeout(() => {
                        mostrarTooltipAlbum(this, album, artista, e.clientX, e.clientY);

                        this.style.transform = 'scale(1.05)';
                        this.style.transition = 'transform 0.3s';
                        this.style.boxShadow = '0 0 15px rgba(78, 205, 196, 0.5)';

                        const card = this.closest('.resultado-cancion');
                        if (card) {
                            card.style.borderColor = '#4ecdc4';
                            card.style.boxShadow = '0 5px 15px rgba(78, 205, 196, 0.2)';
                        }
                    }, 300);
                });

                portada.addEventListener('mouseleave', function() {
                    clearTimeout(timeoutId);
                    if (tooltipActual) {
                        tooltipActual.remove();
                        tooltipActual = null;
                    }
                    this.style.transform = 'scale(1)';
                    this.style.boxShadow = '';

                    const card = this.closest('.resultado-cancion');
                    if (card) {
                        card.style.borderColor = 'transparent';
                        card.style.boxShadow = '';
                    }
                });

                portada.addEventListener('mousemove', function(e) {
                    if (tooltipActual && tooltipActual.firstChild) {
                        const tooltip = tooltipActual.firstChild;
                        tooltip.style.top = (e.clientY - tooltip.offsetHeight - 10) + 'px';
                        tooltip.style.left = e.clientX + 'px';
                    }
                });

                portada.addEventListener('click', function() {
                    const album = this.dataset.album;
                    const artista = this.dataset.artista;

                    if (album && album !== 'Sin √°lbum') {
                        alert(`üíø √Ålbum: ${album}\nüë§ Artista: ${artista}`);
                    }
                });
            });

            tarjetasResultados.forEach(card => {
                card.addEventListener('mouseenter', function(e) {
                    if (!e.target.closest('.portada-resultado')) {
                        this.style.transform = 'translateY(-3px) scale(1.02)';
                        this.style.boxShadow = '0 10px 20px rgba(78, 205, 196, 0.15)';
                        this.style.borderColor = '#4ecdc4';
                    }
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = '';
                    this.style.boxShadow = '';
                    this.style.borderColor = 'transparent';
                });
            });

            botonesResultados.forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();

                    const nombre = this.dataset.nombre;
                    const artista = this.dataset.artista;

                    if (!nombre || !artista) {
                        alert('No se puede agregar esta canci√≥n (datos incompletos)');
                        return;
                    }

                    const originalText = this.innerHTML;
                    this.innerHTML = '‚úì Agregado!';
                    this.style.background = '#198754';
                    this.style.transform = 'scale(0.95)';

                    setTimeout(() => {
                        this.innerHTML = originalText;
                        this.style.background = '#28a745';
                        this.style.transform = 'scale(1)';
                    }, 1500);

                    const data = {
                        nombre: nombre,
                        artista: artista,
                        audio: this.dataset.audio,
                        portada: this.dataset.portada,
                        album: this.dataset.album
                    };

                    fetch('/favoritos/agregar', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    })
                            .then(res => res.json())
                            .then(res => {
                                if(res.success) {
                                    const card = this.closest('.resultado-cancion');
                                    card.style.boxShadow = '0 0 20px #28a745';
                                    card.style.borderColor = '#28a745';

                                    setTimeout(() => {
                                        card.style.boxShadow = '';
                                        card.style.borderColor = 'transparent';
                                    }, 2000);
                                } else {
                                    alert('Error al agregar a favoritos');
                                }
                            })
                            .catch(err => {
                                console.error('Error:', err);
                                alert('Error de conexi√≥n');
                            });
                });

                btn.addEventListener('mouseenter', function() {
                    if (!this.innerHTML.includes('‚úì')) {
                        this.style.transform = 'scale(1.05)';
                    }
                });

                btn.addEventListener('mouseleave', function() {
                    if (!this.innerHTML.includes('‚úì')) {
                        this.style.transform = 'scale(1)';
                    }
                });
            });

            const audiosResultados = resultadosBusqueda.querySelectorAll('audio');
            audiosResultados.forEach(audio => {
                audio.addEventListener('play', function() {
                    document.querySelectorAll('audio').forEach(otherAudio => {
                        if (otherAudio !== this && !otherAudio.paused) {
                            otherAudio.pause();
                        }
                    });
                });
            });
        }

        btnBuscar.addEventListener('click', () => {
            const termino = buscadorInput.value.trim();
            if (termino) {
                buscarCanciones(termino);
                resultadosBusqueda.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        });

        buscadorInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                const termino = buscadorInput.value.trim();
                if (termino) {
                    buscarCanciones(termino);
                    resultadosBusqueda.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            }
        });

        buscadorInput.addEventListener('input', () => {
            if (buscadorInput.value.trim() === '') {
                resultadosBusqueda.style.display = 'none';
                resultadosBusqueda.innerHTML = '';
                if (tooltipActual) {
                    tooltipActual.remove();
                    tooltipActual = null;
                }
            }
        });

        window.addEventListener('scroll', () => {
            if (tooltipActual) {
                tooltipActual.remove();
                tooltipActual = null;
            }
        });

        const tarjetas = document.querySelectorAll('.song-card');

        tarjetas.forEach(card => {
            card.style.transition = 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)';

            card.addEventListener('mouseenter', function() {
                console.log(`Hover sobre tarjeta HOME: ${this.querySelector('.card-title').textContent}`);

                this.style.transform = 'translateY(-10px) scale(1.05)';
                this.style.boxShadow = '0 15px 30px rgba(255, 255, 255, 0.3)';
                this.style.zIndex = '5';
                this.style.borderColor = '#ff6b6b';

                const img = this.querySelector('.card-img-top');
                img.style.filter = 'brightness(1.2)';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
                this.style.boxShadow = '0 5px 15px rgba(0, 0, 0, 0.2)';
                this.style.zIndex = '1';
                this.style.borderColor = '#fff';

                const img = this.querySelector('.card-img-top');
                img.style.filter = 'brightness(1)';
            });

            card.addEventListener('click', function(e) {
                if (!e.target.closest('.favorito-btn') &&
                        !e.target.closest('audio') &&
                        e.target.tagName !== 'AUDIO') {

                    console.log(`Click en tarjeta HOME: ${this.querySelector('.card-title').textContent}`);

                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = 'translateY(-10px) scale(1.05)';
                    }, 150);
                }
            });

            const img = card.querySelector('.card-img-top');

            let homeTimeoutId = null;
            let homeTooltip = null;

            img.addEventListener('mouseenter', function(e) {
                const album = this.title.replace('√Ålbum: ', '');

                homeTimeoutId = setTimeout(() => {
                    homeTooltip = document.createElement('div');
                    homeTooltip.innerHTML = `
                        <div style="position: fixed; background: rgba(0,0,0,0.95); color: white;
                                   padding: 12px 15px; border-radius: 10px; border: 2px solid #ff6b6b;
                                   z-index: 9999; max-width: 300px; font-size: 0.9rem;
                                   backdrop-filter: blur(5px); box-shadow: 0 5px 20px rgba(0,0,0,0.7);
                                   pointer-events: none; transform: translate(-50%, -100%);">
                            <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 8px;">
                                <div style="width: 40px; height: 40px; background: #ff6b6b; border-radius: 8px;
                                           display: flex; align-items: center; justify-content: center; font-size: 1.2rem;">
                                    üíø
                                </div>
                                <div>
                                    <strong style="color: #ff6b6b; display: block;">${album}</strong>
                                    <small style="color: #ccc;">√Ålbum</small>
                                </div>
                            </div>
                        </div>
                    `;

                    const tooltipContent = homeTooltip.firstChild;
                    tooltipContent.style.top = (e.clientY - 10) + 'px';
                    tooltipContent.style.left = e.clientX + 'px';

                    document.body.appendChild(tooltipContent);

                    this.style.transform = 'scale(1.05)';
                    this.style.transition = 'transform 0.3s';
                    this.style.boxShadow = '0 0 20px rgba(255, 107, 107, 0.5)';

                }, 300);
            });

            img.addEventListener('mouseleave', function() {
                if (homeTimeoutId) {
                    clearTimeout(homeTimeoutId);
                    homeTimeoutId = null;
                }
                if (homeTooltip) {
                    homeTooltip.remove();
                    homeTooltip = null;
                }

                this.style.transform = 'scale(1)';
                this.style.boxShadow = '';
            });

            img.addEventListener('mousemove', function(e) {
                if (homeTooltip && homeTooltip.firstChild) {
                    const tooltip = homeTooltip.firstChild;
                    tooltip.style.top = (e.clientY - tooltip.offsetHeight - 10) + 'px';
                    tooltip.style.left = e.clientX + 'px';
                }
            });

            img.addEventListener('click', function() {
                console.log(`Click en portada HOME: ${this.title}`);
                alert(`√Ålbum: ${this.title.replace('√Ålbum: ', '')}`);
            });
        });

        const botonesFavoritos = document.querySelectorAll('.favorito-btn');

        botonesFavoritos.forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();

                const nombre = this.dataset.nombre;
                const artista = this.dataset.artista;

                console.log(`Agregando a favoritos desde HOME: "${nombre}" - ${artista}`);

                this.style.transform = 'scale(0.9)';
                this.style.backgroundColor = '#ff6b6b';
                this.innerHTML = '‚ù§Ô∏è Agregado!';

                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                    this.style.backgroundColor = '';
                    this.innerHTML = '‚ù§Ô∏è Favoritos';
                }, 500);

                const data = {
                    nombre: nombre,
                    artista: artista,
                    audio: this.dataset.audio,
                    portada: this.dataset.portada,
                    album: this.dataset.album
                };

                fetch('/favoritos/agregar', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                })
                        .then(res => res.json())
                        .then(res => {
                            if(res.success) {
                                const card = this.closest('.song-card');
                                card.style.boxShadow = '0 0 20px #ff6b6b';
                                setTimeout(() => {
                                    card.style.boxShadow = '0 15px 30px rgba(255, 255, 255, 0.3)';
                                }, 1000);
                            }
                        });
            });

            btn.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.05)';
                this.style.transition = 'transform 0.2s';
            });

            btn.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        });

        const elementosAudio = document.querySelectorAll('audio');

        elementosAudio.forEach(audio => {
            audio.addEventListener('play', function() {
                console.log(`Reproduciendo: ${this.src}`);

                elementosAudio.forEach(otherAudio => {
                    if(otherAudio !== this && !otherAudio.paused) {
                        otherAudio.pause();
                    }
                });

                const card = this.closest('.song-card, .resultado-cancion');
                card.style.borderColor = '#4ecdc4';
                card.style.boxShadow = '0 0 20px rgba(78, 205, 196, 0.5)';
            });

            audio.addEventListener('pause', function() {
                const card = this.closest('.song-card, .resultado-cancion');
                if(!card.matches(':hover')) {
                    card.style.borderColor = '';
                    card.style.boxShadow = '';
                }
            });

            audio.addEventListener('click', function(e) {
                e.stopPropagation();
            });
        });

        window.addEventListener('load', function() {
            const contenedor = document.getElementById('contenedor-canciones');
            if(contenedor) {
                contenedor.style.opacity = '0';
                contenedor.style.transform = 'translateY(20px)';
                contenedor.style.transition = 'opacity 0.5s, transform 0.5s';

                setTimeout(() => {
                    contenedor.style.opacity = '1';
                    contenedor.style.transform = 'translateY(0)';
                }, 100);
            }

            const menuNav = document.querySelector('nav');
            if(menuNav) {
                menuNav.style.opacity = '0';
                menuNav.style.transform = 'translateY(-20px)';
                menuNav.style.transition = 'opacity 0.6s, transform 0.6s';

                setTimeout(() => {
                    menuNav.style.opacity = '1';
                    menuNav.style.transform = 'translateY(0)';
                }, 300);
            }
        });
    });
</script>

