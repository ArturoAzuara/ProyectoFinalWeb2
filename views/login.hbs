<video autoplay muted loop id="videoFondo">
    <source src="/videos/video_fondo.mp4" type="video/mp4">
</video>

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg"
         style="width: 280px; background: rgba(20,20,20,0.65); backdrop-filter: blur(6px);
                border: 1px solid #fff; border-radius: 14px;">
        <div class="card-body p-4">

            <h4 class="text-center mb-3"
                style="color: #fff; font-weight: 300; letter-spacing: 1px;">
                Iniciar sesión
            </h4>
            <form action="/" method="POST" style="margin-top: 5px;">

                <div class="mb-2">
                    <label class="form-label"
                           style="color: #eee; font-size: 0.85rem;">Usuario</label>
                    <input type="text" name="usuario" class="form-control"
                           style="background: rgba(0,0,0,0.6); border: 1px solid #555; color: #fff;
                                  height: 32px; font-size: 0.9rem;"
                           required>
                </div>

                <div class="mb-3">
                    <label class="form-label"
                           style="color: #eee; font-size: 0.85rem;">Contraseña</label>
                    <input type="password" name="password" class="form-control"
                           style="background: rgba(0,0,0,0.6); border: 1px solid #555; color: #fff;
                                  height: 32px; font-size: 0.9rem;"
                           required>
                </div>

                {{#if mensajeError}}
                    <div class="alert alert-danger">{{mensajeError}}</div>
                {{/if}}

                {{#if mensaje}}
                    <div class="alert alert-success">{{mensaje}}</div>
                {{/if}}

                <div class="d-flex gap-2">
                    <button type="submit"
                            class="btn w-50"
                            style="background: #000; color: #fff; border-radius: 6px; border: 1px solid #fff; height: 34px;">
                        Entrar
                    </button>

                    <a href="/registro"
                       class="btn w-50"
                       style="background: transparent; color: #fff; border: 1px solid #fff;
                              border-radius: 6px; height: 34px; display: flex; align-items: center; justify-content: center;">
                        Registrarse
                    </a>
                </div>

                <div style="margin-top: 12px;">
                    <a href="/recuperar"
                       class="btn w-100"
                       style="background: transparent; color: #fff; border: 1px solid #fff;
              border-radius: 6px; height: 34px; display: flex; align-items: center;
              justify-content: center;">
                        ¿Olvidaste tu contraseña?
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const usuarioInput = document.querySelector('input[name="usuario"]');
        const passwordInput = document.querySelector('input[name="password"]');

        usuarioInput.addEventListener('keydown', e => {
            console.log(`Usuario: presionaste la tecla "${e.key}"`);
        });

        passwordInput.addEventListener('keydown', e => {
            console.log(`Contraseña: presionaste la tecla "${e.key}"`);
        });
    });
</script>

